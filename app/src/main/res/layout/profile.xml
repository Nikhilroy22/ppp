<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    
    >
<!-- ActionBar -->
<LinearLayout
				android:id="@+id/linear3"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#2b411a"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<ImageView
					android:id="@+id/back"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					
					android:gravity="center"
					android:src="@drawable/backv"
					android:scaleType="center" />
				<TextView
					android:id="@+id/title"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="Deposit"
					android:textSize="16sp"
					android:textColor="#FFFFFF" />
			</LinearLayout>


<!-- Main -->

 <ScrollView
		android:id="@+id/scroller"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#FFFFFF">
   <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal|center_vertical">
     <TextView
						android:id="@+id/textview11"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Sender Mobile Account Number"
						android:textSize="16sp"
						android:textStyle="bold"
						android:textColor="#9798A2" />
     
     <EditText
					android:id="@+id/EditNumber"
					android:layout_width="match_parent"
					android:layout_height="50dp"
					android:layout_marginLeft="23dp"
					android:layout_marginRight="23dp"
					android:padding="8dp"
					android:background="#1D1B30"
					android:gravity="center_vertical"
					android:textSize="16sp"
					android:textStyle="bold"
					android:textColor="#9798A2"
					android:hint="Sender Account Mobile Number"
					android:textColorHint="#9798A2"
					android:inputType="numberSigned" />
     
     <TextView
						android:id="@+id/textview79"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Amount"
						android:textSize="16sp"
						android:textStyle="bold"
						android:textColor="#9798A2" />
     
     <EditText
					android:id="@+id/EditAmount"
					android:layout_width="match_parent"
					android:layout_height="50dp"
					android:layout_marginLeft="23dp"
					android:layout_marginRight="23dp"
					android:padding="8dp"
					android:background="#1D1B30"
					android:gravity="center_vertical"
					android:textSize="16sp"
					android:textStyle="bold"
					android:textColor="#9798A2"
					android:hint="Amount"
					android:textColorHint="#9798A2"
					android:inputType="numberSigned" />
   
   <Button
					android:id="@+id/SendDone"
					android:layout_width="match_parent"
					android:layout_height="50dp"
					android:layout_marginLeft="23dp"
					android:layout_marginTop="15dp"
					android:layout_marginRight="23dp"
					android:layout_marginBottom="15dp"
					android:background="#657BF8"
					
					android:text="Verify Payment"
					android:textSize="16sp"
					android:textStyle="bold"
					android:textColor="#FFFFFF" />
   
   
   <TextView
					android:id="@+id/textview78"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center_horizontal|center_vertical"
					android:text="ভেরিফাই করার আগে সেন্ড মানি করতে হবে নাহলে আপনার ভেরিফিকেশন সফল হবে না।"
					android:textSize="16sp"
					android:textStyle="bold"
					android:textColor="#e74141" />
   
   
   </LinearLayout>
   
 </ScrollView>


</LinearLayout>